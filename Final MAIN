package AMS;

import java.sql.Connection;
import java.sql.DriverManager;

import javafx.application.Application;
import javafx.geometry.Pos;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.layout.VBox;
import javafx.stage.Stage;
import java.sql.*;

public class Main extends Application {
	
	 
    @Override
    public void start(Stage primaryStage) {

        Label title = new Label("Airline Management System");
        title.setStyle("-fx-font-size: 22px; -fx-font-weight: bold;");

        Button crewBtn = new Button("Crew Member");
        Button pilotBtn = new Button("Pilot");
        Button passengerBtn = new Button("VIP Passenger");

        crewBtn.setOnAction(e -> LoginWindow.open("CREW"));
        pilotBtn.setOnAction(e -> LoginWindow.open("PILOT"));
        passengerBtn.setOnAction(e -> LoginWindow.open("PASSENGER"));

        VBox root = new VBox(15, title, crewBtn, pilotBtn, passengerBtn);
        root.setAlignment(Pos.CENTER);

        Scene scene = new Scene(root, 400, 300);
        primaryStage.setScene(scene);
        primaryStage.setTitle("Airline System");
        primaryStage.show();
    }

    public static void main(String[] args) {
        launch(args);
    }
}
